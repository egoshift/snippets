{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "api", 
    "baseUrl": "api",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "models/*": ["models/*"],
      "controllers/*": ["controllers/*"],
      "routes/*": ["routes/*"]
    },
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "functions/**/*",
    "public/**/*"
  ]
}
